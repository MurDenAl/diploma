{% extends 'base.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block body %}
    <div class="Middle Middle_top">
        <div class="Middle-top">
            <div class="wrap">
                <div class="Middle-header">
                    <h1 class="Middle-title">Каталог</h1>
                    <ul class="breadcrumbs Middle-breadcrumbs">
                        <li class="breadcrumbs-item"><a href="{{ path('app_homepage') }}">Главная</a></li>
                        <li class="breadcrumbs-item breadcrumbs-item_current"><span>Каталог</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">Фильтр</strong>
                        </header>
                        <div class="Section-columnContent">
                            <form class="form">
                                <div class="form-group">
                                    <div class="range Section-columnRange">
                                        <input class="range-line" id="price" name="price" type="text" data-type="double" data-min="7" data-max="50" data-from="7" data-to="50" value="{{ app.request.query.get('price') }}"/>
                                        <div class="range-price">Цена:&#32;
                                            <div class="rangePrice"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input class="form-input form-input_full" id="title" name="title" type="text" placeholder="Название" value="{{ app.request.query.get('title') }}"/>
                                </div>
                                <div class="form-group">
                                    <select name="seller" class="form-select">
                                        <option selected="selected" disabled="disabled">Продавец</option>
                                        {% for merchant in merchants %}
                                            <option name="seller" value="{{ merchant.id }}">{{ merchant.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="toggle">
                                        <input type="checkbox" name="screen"/><span class="toggle-box"></span><span class="toggle-text">Только с небитым экраном</span>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <div class="buttons"><input type="submit" value="Применить" class="btn btn_square btn_dark btn_narrow"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Sort">
                        <div class="Sort-title">Сортировать по:
                        </div>
                        <div class="Sort-variants"><a
                            {% if app.request.query.all.sortBy is defined and app.request.query.all.sortBy == 'popInc' %}
                                class="Sort-sortBy Sort-sortBy_inc" href="{{ path('app_first_category', app.request.query.all|merge({ category: page, sortBy: 'popDec' })) }}"
                            {% elseif app.request.query.all.sortBy is defined and app.request.query.all.sortBy == 'popDec' %}
                                class="Sort-sortBy Sort-sortBy_dec" href="{{ path('app_first_category', app.request.query.all|merge({ category: page, sortBy: 'popInc' })) }}"
                            {% else %}
                                class="Sort-sortBy" href="{{ path('app_first_category', app.request.query.all|merge({ category: page, sortBy: 'popDec' })) }}"
                            {% endif %}>Популярности</a><a
                            {% if app.request.query.all.sortBy is defined and app.request.query.all.sortBy == 'priceInc' %}
                                class="Sort-sortBy Sort-sortBy_inc" href="{{ path('app_first_category', app.request.query.all|merge({ category: page, sortBy: 'priceDec' })) }}"
                            {% elseif app.request.query.all.sortBy is defined and app.request.query.all.sortBy == 'priceDec' %}
                                class="Sort-sortBy Sort-sortBy_dec" href="{{ path('app_first_category', app.request.query.all|merge({ category: page, sortBy: 'priceInc' })) }}"
                            {% else %}
                                class="Sort-sortBy" href="{{ path('app_first_category', app.request.query.all|merge({ category: page, sortBy: 'priceDec' })) }}"
                            {% endif %}>Цене</a>
                        </div>
                    </div>
                    <div class="Cards">
                        {% for product in pagination %}
                            <div class="Card hide_md hide_1450"><a class="Card-picture" href="{{ path('app_first_show', {slug: product.id}) }}"><img src="{{ asset('assets/img/content/home/card.jpg') }}" alt="card.jpg"/></a>
                                <div class="Card-content">
                                    <strong class="Card-title"><a href="{{ path('app_first_show', {slug: product.id}) }}">{{ product.getProduct.name }}</a>
                                    </strong>
                                    <div class="Card-description">
                                        <div class="Card-cost"><span class="Card-price">${{ product.price }}</span>
                                        </div>
                                        <div class="Card-category">Media / xbox
                                        </div>
                                        <div class="Card-hover"><a class="Card-btn" href="{{ path('app_first_show', {slug: product.id}) }}"><img src="{{ asset('assets/img/icons/card/bookmark.svg') }}" alt="bookmark.svg"/></a><a class="Card-btn" href="#"><img src="{{ asset('assets/img/icons/card/cart.svg') }}" alt="cart.svg"/></a><a class="Card-btn" href="{{ path('app_first_compare') }}"><img src="{{ asset('assets/img/icons/card/change.svg') }}" alt="change.svg"/></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="Pagination">
                        <div class="Pagination-ins">{{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}